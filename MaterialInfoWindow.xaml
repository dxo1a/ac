<Window x:Class="ac.MaterialInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ac"
        mc:Ignorable="d"
        Title="MaterialInfoWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="MaterialsTemplate">
            <Expander Name="MaterialED" Loaded="MaterialED_Loaded">
                <DataGrid Name="DevSNDG" CanUserAddRows="False" Grid.Row="1" Grid.Column="1" Margin="5" CanUserDeleteRows="False" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Style="{StaticResource DataGridOwn}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding DEV_SN}" Header="Сер. номер" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Expander>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="MaterialsItemsControl" ItemTemplate="{StaticResource MaterialsTemplate}"/>

        </ScrollViewer>
    </Grid>
</Window>
