<Window x:Class="ac.MaterialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ac"
        mc:Ignorable="d"
        Title="MaterialsWindow" Height="450" Width="800" Icon="Resources/ac.ico">
    <Grid>
        <DataGrid Name="MaterialsDG" CanUserAddRows="False" Grid.Row="1" Grid.Column="1" Margin="5" CanUserDeleteRows="False" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Style="{StaticResource DataGridOwn}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding MaterialName}" Header="Материал" Width="*"/>
                <DataGridTextColumn Binding="{Binding EditDTE, StringFormat='{}{0:dd.MM.yyyy HH:mm:ss}'}" Header="Дата изменения" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
